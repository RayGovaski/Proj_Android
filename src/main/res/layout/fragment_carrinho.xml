<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E9E3E6">

    <TextView
        android:id="@+id/textCarrinho"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="45dp"
        android:fontFamily="@font/manjari"
        android:text="Carrinho"
        android:textAlignment="textEnd"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="322dp"
        android:layout_height="38dp"
        android:layout_marginTop="25dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@+id/cardProduto"
        app:layout_constraintStart_toStartOf="@+id/cardProduto"
        app:layout_constraintTop_toBottomOf="@+id/cardProduto">

        <TextView
            android:id="@+id/totalcompra"
            android:layout_width="164dp"
            android:layout_height="match_parent"
            android:fontFamily="@font/manjari"
            android:text="Total:"
            android:textAlignment="viewStart"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/precoProd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/manjari"
            android:text="R$00,00"
            android:textAlignment="textEnd"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/cardProduto"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="25dp"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@+id/textCarrinho"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textCarrinho">

        <ImageView
            android:id="@+id/imagemProduto"
            android:layout_width="168dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="7dp"
            android:textAlignment="center"
            app:srcCompat="@drawable/produto1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView16"
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/manjari"
                android:text="Caputino"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/preco_produto"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginBottom="25dp"
                android:fontFamily="@font/manjari"
                android:text="R$00,00"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    <!-- Total -->
    <LinearLayout
        android:id="@+id/itensCarrinhoLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/cardProduto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
